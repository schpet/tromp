{
  "name": "tromp",
  "displayName": "tromp",
  "publisher": "schpet",
  "description": "TODO: write description",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.40.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:tromp.runCommand"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tromp.runCommand",
        "title": "Tromp: run command"
      },
      {
        "command": "tromp.runPreviousCommand",
        "title": "Tromp: run previous command"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "tromp.json",
        "url": "./src/trompSchema.json"
      }
    ],
    "taskDefinitions": []
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile",
    "test": "node ./out/test/runCommand.js",
    "schema": "json2ts src/trompSchema.json src/types/trompSchema.d.ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.0.23",
    "@types/minimatch": "^3.0.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.40.0",
    "glob": "^7.1.6",
    "jest": "^24.9.0",
    "json-schema-to-typescript": "^7.1.0",
    "mocha": "^6.2.2",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.0",
    "typescript": "^3.7.2",
    "vscode-test": "^1.2.2"
  },
  "dependencies": {
    "ajv": "^6.10.2",
    "alternate-file": "^0.2.6",
    "minimatch": "^3.0.4"
  }
}
